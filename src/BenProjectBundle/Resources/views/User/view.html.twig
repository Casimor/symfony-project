{% extends "::base.html.twig" %}

{% block body %}
<a href="{{ path('create_user') }}" class="btn btn-danger">Cr√©er un utilisateur</a> 
<div class="panel panel-success">
	<div class="panel-heading">
		<h1> Utilisateurs </h1>
	</div>
	<div class="panel-body">
		<table class="table">
			<tr>
  			  <th>Nom de compte</th>
  			  <th>Actions</th>
  			</tr>
			{% for user in listUsers %}
    			<tr>
    				<td> {{ user.username }} </td>
    				<td> 
    					<a href="{{ path('modify_user', {'id': user.id}) }}" class="btn btn-danger">Modifier</a> 
    					<a href="{{ path('delete_user', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
    				</td>
  				</tr>
  			{% endfor %}
		</table>
	</div>
</div>
{% endblock %}